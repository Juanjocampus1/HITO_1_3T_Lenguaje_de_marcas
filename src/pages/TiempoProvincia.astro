<Layout>
    <h1 id="valor" class="text-2xl text-white flex justify-center items-center py-16 font-bold"></h1>
    <div id="contenedor-tarjeta" class=" flex flex-row py-44">
    </div>
</Layout>
<script>
    function obtenerValorCookie(nombre) {
        const cookies = document.cookie.split(';');
        for (let i = 0; i < cookies.length; i++) {
            const cookie = cookies[i].trim();
            if (cookie.startsWith(`${nombre}=`)) {
                return cookie.substring(nombre.length + 1);
            }
        }
        return null;
    }

    const codProv = obtenerValorCookie('codProvSeleccionado');

    if (codProv) {
        const url = `https://www.el-tiempo.net/api/json/v2/provincias/${codProv}/municipios`;

        fetch(url)
            .then(response => response.json())
            .then(data => {
                const municipio = data.municipios[0]; // Solo tomamos el primer municipio como ejemplo
                const nombreProvincia = municipio.NOMBRE_PROVINCIA;
                const nombreMunicipio = municipio.NOMBRE;
                const poblacion = municipio.POBLACION_MUNI;
                const superficie = municipio.SUPERFICIE;
                const perimetro = municipio.PERIMETRO;
                const nombreCapital = municipio.NOMBRE_CAPITAL;
                const poblacionCapital = municipio.POBLACION_CAPITAL;
                const longitud = municipio.LONGITUD_ETRS89_REGCAN95;
                const latitud = municipio.LATITUD_ETRS89_REGCAN95;
                const altitud = municipio.ALTITUD * 3.28084; // Convertir altitud a pies

                // Crear elementos HTML dinámicamente
                const card = document.createElement('div');
                card.classList.add('bg-white', 'shadow-md', 'rounded-lg', 'overflow-hidden', 'p-4', 'w-full', 'md:w-1/2', 'lg:w-1/3', 'mx-auto');

                const title = document.createElement('h2');
                title.classList.add('text-xl', 'font-semibold', 'mb-2');
                title.textContent = 'Información del Municipio';

                const content = document.createElement('div');
                content.classList.add('text-gray-600', 'mb-2');
                content.innerHTML = `
                <span class="font-semibold">Nombre de la provincia:</span> ${nombreProvincia}<br>
                <span class="font-semibold">Nombre del municipio:</span> ${nombreMunicipio}<br>
                <span class="font-semibold">Población del municipio:</span> ${poblacion}<br>
                <span class="font-semibold">Superficie del municipio:</span> ${superficie} km²<br>
                <span class="font-semibold">Perímetro del municipio:</span> ${perimetro} m<br>
                <span class="font-semibold">Nombre de la capital:</span> ${nombreCapital}<br>
                <span class="font-semibold">Población de la capital:</span> ${poblacionCapital}<br>
                <span class="font-semibold">Longitud:</span> ${longitud}<br>
                <span class="font-semibold">Latitud:</span> ${latitud}<br>
                <span class="font-semibold">Altitud (en pies):</span> ${altitud}
            `;

                // Agregar elementos al contenedor
                card.appendChild(title);
                card.appendChild(content);
                document.getElementById('contenedor-tarjeta').appendChild(card);
            })
            .catch(error => console.error('Error al obtener los datos:', error));
    } else {
        console.log('No se pudo obtener el código de provincia de la cookie.');
    }


</script>

