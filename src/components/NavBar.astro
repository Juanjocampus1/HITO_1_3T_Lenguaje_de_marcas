---
// Definimos las propiedades del componente
export let links = [
    { text: 'API', url: '/' },
    { text: 'Calculadora', url: '/Calculadora' }
];
---

<nav class="bg-gradient-to-r from-slate-500 to-slate-800 rounded-b-full p-4">
    <ul class="flex justify-center space-x-4">
        {links.map(link => (
                <li>
                    <a
                        href={link.url}
                        class=" text-whitefont-semibold text-zinc-400 hover:text-gray-100 px-3 py-2 rounded-md transition duration-300 ease-in-out">
                        {link.text}
                    </a>
                </li>
        ))}
    </ul>
</nav>
